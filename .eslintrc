{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],

  "plugins": [
    "@typescript-eslint"
  ],

  "env": {
    "es2020": true,
    "node": true
  },

  "parserOptions": {
    "sourceType": "module",
    "project": "./tsconfig.json"
  },

  "rules": {
    "eqeqeq": [2, "smart"],
    "no-var": 2,

    "array-bracket-spacing": 1,
    "block-spacing": 1,
    "computed-property-spacing": 1,
    "eol-last": [1, "always"],
    "keyword-spacing": 1,
    // TODO(rui): apply this later
    "max-len": [1, { "code": 120, "tabWidth": 2 }],
    "no-multiple-empty-lines": [1, { "max": 1 }],
    "no-trailing-spaces": [1, { "skipBlankLines": false }],
    "object-curly-spacing": 1,
    "quotes": [1, "single", "avoid-escape"],
    "space-before-blocks": [1, "always"],
    "space-before-function-paren": [1, { "anonymous": "always", "named": "never" }],
    "space-in-parens": 1,
    "@typescript-eslint/indent": [1, 2, { "SwitchCase": 1 }],
    "@typescript-eslint/semi": [1, "never"],
    "@typescript-eslint/strict-boolean-expressions": ["error", { "allowString": false, "allowNumber": false, "allowNullableObject": false }],

    "no-console": 0,
    "@typescript-eslint/no-unused-vars": 0,
    "@typescript-eslint/no-non-null-assertion": 0,
    "@typescript-eslint/no-explicit-any": 0,
    "@typescript-eslint/ban-ts-ignore": 0,
    "@typescript-eslint/ban-types": 0,
    "@typescript-eslint/no-empty-function": 0,
    "@typescript-eslint/explicit-function-return-type": 0,
    "@typescript-eslint/explicit-module-boundary-types": 0 // TODO(rui): review this
  }
}
